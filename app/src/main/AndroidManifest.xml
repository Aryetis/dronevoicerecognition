<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dvr.mel.dronevoicerecognition">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MicActivity"></activity>
        <activity android:name=".MainMenuActivity" />
        <activity
            android:name=".ManageCorpusesActivity"
            android:label="@string/title_activity_manage_corpuses"
            android:parentActivityName=".MainMenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dvr.mel.dronevoicerecognition.MainMenuActivity" />
        </activity>
        <activity android:name=".FinalCorpusActivity" />
        <activity
            android:name=".MicCalibration"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_mic_calibration"
            android:parentActivityName=".MainMenuActivity">
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>